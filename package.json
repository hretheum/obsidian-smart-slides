{
  "name": "smart-slides-obsidian",
  "version": "1.0.0",
  "description": "AI-powered presentation generator for Obsidian with Slides Extended support",
  "main": "main.js",
  "scripts": {
    "typecheck": "tsc --noEmit",
    "dev": "node esbuild.config.mjs",
    "build": "npm run typecheck && node esbuild.config.mjs production",
    "version": "node version-bump.mjs && git add manifest.json versions.json",
    "test": "jest --config jest.config.js --passWithNoTests",
    "test:ci": "jest --config jest.config.js --coverage --passWithNoTests",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "lint": "eslint . --ext .ts",
    "lint:ci": "eslint . --ext .ts --max-warnings 0",
    "lint:fix": "eslint . --ext .ts --fix",
    "format": "prettier --write 'src/**/*.ts'",
    "format:check": "prettier --check 'src/**/*.ts'",
    "security:audit": "npm audit --audit-level=high || true",
    "validate:bundle-size": "node scripts/validate-bundle-size.mjs",
    "benchmark:basic": "node scripts/bench-basic.mjs",
    "ci:gates": "npm run typecheck && npm run lint:ci && npm run format:check && npm run test:ci && npm run validate:bundle-size && npm run benchmark:basic",
    "deps:check": "madge --circular --extensions ts src",
    "deps:graph": "madge --extensions ts --image dependency-graph.svg src",
    "deps:json": "madge --extensions ts --json src > dependency-graph.json",
    "link-vault": "ln -s $(pwd) \"$1/.obsidian/plugins/smart-slides\"",
    "prepare": "husky"
  },
  "keywords": [
    "obsidian",
    "obsidian-plugin",
    "presentation",
    "slides",
    "ai",
    "gpt",
    "automation"
  ],
  "author": "Your Name",
  "license": "MIT",
  "devDependencies": {
    "@types/jest": "^29.5.0",
    "@types/node": "^16.11.6",
    "@typescript-eslint/eslint-plugin": "5.29.0",
    "@typescript-eslint/parser": "5.29.0",
    "builtin-modules": "3.3.0",
    "esbuild": "0.17.3",
    "eslint": "^8.42.0",
    "eslint-plugin-boundaries": "^3.4.1",
    "eslint-plugin-import": "^2.32.0",
    "husky": "^9.1.7",
    "jest": "^29.5.0",
    "obsidian": "latest",
    "prettier": "^2.8.8",
    "ts-jest": "^29.1.0",
    "tslib": "2.4.0",
    "typescript": "^4.9.5",
    "madge": "^6.0.0"
  },
  "dependencies": {
    "natural": "^6.10.0"
  }
}
